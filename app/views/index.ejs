<!DOCTYPE html>
<html lang="ko" ng-app="woofer">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>우퍼</title>

    <script src="https://apis.google.com/js/api.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <!-- Bootstrap Core CSS -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.9/angular.min.js"></script>
    <!-- load MUI -->
    <link href="//cdn.muicss.com/mui-0.9.5/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.9.5/angular/mui-angular.min.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.9/angular-route.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.9/angular-resource.js"></script>
    <script src="/woofer.config.js"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="/components/angular-youtube-embed/dist/angular-youtube-embed.min.js"></script>

    <script src="/woofer.api.js"></script>
    <script src="/app.js"></script>


    <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>


<div id="wrapper c50">

  <div id="header"class="c900">
    <div class="mui--text-light mui--text-title mui--align-vertical">woofer</div>
    <!-- <mui-input ng-model="room" label="방이름" ng-blur="joinRoom()"></mui-input> -->
  </div>

  <div id="content" class="mui-container-fluid mui-row">
    <!-- blog posts go here -->
    <div id="sidebar" class="mui-col-sm-2 c300">
      <div class="sidebar-header">
      </div>

      <div class="sidebar-body">
        <ul>
          <li>
          </li>
        </ul>
      </div>
    </div>

    <div id="card-list" class="mui-col-sm-7 mui-col-sm-offset-3"  ng-controller="youtubeCtrl">

      <mui-panel class='card' ng-controller="roomCtrl" >
        <div class="card-body">
          <div class="room-frm">
            <form>

              <mui-input class="mui-col-sm-10" ng-model="room" hint="team"></mui-input>
              <mui-button class="mui-col-sm-2" size="small" variant="raised" ng-click="join()">참여하기</mui-button>
            </form>
          </div>
        </div>
      </mui-panel>



      <mui-panel class='card'>
        <div class="card-header">
          <div class="mui--text-dark-secondary mui--text-body2">재생중인 음악</div>
        </div>
        <div class="mui-divider"></div>
        <div class="card-body">
          <div class='player-wapper'>
              <youtube-video video-id="youtube_id" player-vars="playerVars" player="bestPlayer"></youtube-video>
          </div>
        </div>
        <div class="mui-divider"></div>
        <div class="card-footer">
          <mui-container fluid class="player-controller">
            <mui-row>
              <!-- <mui-col xs="4" md="4"><div class="btn">{{'<<'}}</div></mui-col> -->
              <mui-col xs="4" md="4"><div ng-class="shuffleModeClass()" ng-click="toggleSuffleMode()">{{' '}}</div></mui-col>
              <mui-col xs="4" md="4"><div ng-click="reqNext()" class="btn">{{'>>'}}</div></mui-col>
            </mui-row>
          </mui-container>
        </div>
      </mui-panel>


      <mui-panel class='card playlist'>
        <div class="card-header">
          <div class="mui--text-dark-secondary mui--text-body2">
            Play List
            <mui-input class="right filter" ng-model="filterQuery" hint="filter"></mui-input>
          </div>
        </div>
        <div class="mui-divider"></div>
        <div class="card-body">
          <ul>
            <li class="result-item" data-ng-repeat="item in playlist | filter:filterQuery track by $index">
              <img data-ng-src="{{item.snippet.thumbnails.default.url}}">
              <div class='summary' ng-click="reqPlay(item)">
                <a>
                  {{item.snippet.title}}
                </a>
              </div>
              <div class="btn-add-wrapper">
                <mui-button size="small" class="c200" ng-click="del(item)">-</mui-button>
              </div>
            </li>
          </ul>
        </div>
      </mui-panel>


      <mui-panel class='card search' ng-controller="searchCtrl">
        <div class="card-header">
          <div class="mui--text-dark-secondary mui--text-body2">
            검색결과
            <form mui-form-inline class="right filter">
              <mui-input ng-model="query" hint="검색어"></mui-input>
              <mui-button size="small" variant="raised" ng-click="search()">search</mui-button>
            </form>
          </div>
        </div>
        <div class="mui-divider"></div>
        <div class="card-body">
          <ul>
            <li class="result-item" data-ng-repeat="item in resultList">
              <img data-ng-src="{{item.snippet.thumbnails.default.url}}">
              <div class='summary' ng-click="play(item)">
                <a>
                  {{item.snippet.title}}
                </a>
              </div>
              <div class="btn-add-wrapper">
                <!-- <mui-button size="small" color="primary" variant="fab" ng-click="add(item)">+</mui-button> -->
                <mui-button size="small" class="c200" ng-click="add(item)">+</mui-button>
              </div>
            </li>
          </ul>

        </div>
      </mui-panel>

  </div>



  <!-- <div id="page-wrapper" ng-view>
  </div> -->


</div>

</body>

</html>
